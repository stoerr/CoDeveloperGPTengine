#!/usr/bin/env bash
echo build latest version and copy that to the bin directory

progfile=$0
if test -L "$progfile"; then
  progfile=$(readlink "$progfile")
fi
progdir=$(dirname "$progfile")/..
cd "$progdir" || exit 1
mvn -B clean install || exit 1

echo Copying to bin
mv -f bin/developers-chatgpt-toolbench-plugin.jar bin/developers-chatgpt-toolbench-plugin.bak.jar
mv $progdir/target/developers-chatgpt-toolbench-plugin-*.jar bin/developers-chatgpt-toolbench-plugin.jar
ls -l bin
